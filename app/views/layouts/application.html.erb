<!DOCTYPE html>
<html>
	<%= render 'layouts/head' %>
	<body>
		<%= render 'layouts/header' %>

		<section>
			<% flash.each do |key, value| %>
				<div class="flash <%= key %>"><%= value %></div>
			<% end %>
			<%= yield %>
		</section>

		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</body>
</html>
