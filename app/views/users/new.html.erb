<h1>Sign Up</h1>
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>
	<div class="">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="">
		<%= f.label :password_confirmation, "Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="actions">
		<%= f.submit "Sign Up" %>
	</div>
<% end %>


